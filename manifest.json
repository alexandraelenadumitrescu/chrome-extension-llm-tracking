{
  "manifest_version": 3,
  "name": "ChatGPT Usage Tracker",
  "version": "1.0",
  "description": "Monitorizează timpul și mesajele trimise pe ChatGPT.",
  "permissions": ["tabs", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
