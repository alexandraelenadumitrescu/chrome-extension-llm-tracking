{
  "manifest_version": 3,
  "name": "ChatGPT ECO Tracker",
  "version": "2.0",
  "description": "Monitorizează mesajele ChatGPT și impactul asupra mediului (consum apă/energie).",
  "permissions": ["storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  }
}